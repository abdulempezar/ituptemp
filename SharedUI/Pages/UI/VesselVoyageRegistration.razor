@page "/UI/VesselVoyageRegistration"

<SectionContent SectionName="PageTitle">Vessel Voyage Registration</SectionContent>

<MudElement HtmlTag="section" class="BodyWrapper">
    <MudGrid Spacing="3">
        <MudItem xs="12" lg="12">
            <MudCard Elevation="25">
                <MudCardHeader class="pa-2 rounded">
                    <CardHeaderContent>
                        <MudStack Row="true" Spacing="2" AlignItems="MudBlazor.AlignItems.Center" Wrap="Wrap.Wrap">
                            <MudIconButton Href="/UI/VesselList" Icon="@Icons.Material.TwoTone.ChevronLeft"></MudIconButton>
                            <MudText Class="mudcard-title">Vessel Voyage Registration</MudText>
                        </MudStack>
                    </CardHeaderContent>
                    <CardHeaderActions>
                        <RadzenFormField Text="Call Sign" Variant="Radzen.Variant.Outlined">
                            <RadzenDropDownDataGrid TValue="Users" Data="@users" TextProperty="UserName"  ValueProperty="UserID" AllowFilteringByAllStringColumns="true"  AllowVirtualization="true">
                                <Columns>
                                    <RadzenDropDownDataGridColumn Property="UserID" Title="UserID"  />
                                    <RadzenDropDownDataGridColumn Property="UserName" Title="UserName" />
                                </Columns>
                            </RadzenDropDownDataGrid>
                        </RadzenFormField>

                        <RadzenFormField Text="Vessel Name" Variant="Radzen.Variant.Outlined">
                            <RadzenAutoComplete Data="@users" FilterCaseSensitivity="FilterCaseSensitivity.CaseInsensitive" TextProperty="UserName" />
                        </RadzenFormField>
                        
                        <RadzenFormField Text="IMO Number" Variant="Radzen.Variant.Outlined">
                            <RadzenDropDownDataGrid TValue="Users" Data="@users" TextProperty="UserName"  ValueProperty="UserID" AllowFilteringByAllStringColumns="true"  AllowVirtualization="true" AllowClear="true">
                                <Columns>
                                    <RadzenDropDownDataGridColumn Property="UserID" Title="UserID"  />
                                    <RadzenDropDownDataGridColumn Property="UserName" Title="UserName" />
                                </Columns>
                            </RadzenDropDownDataGrid>
                        </RadzenFormField>
                        <RadzenFormField Text="VCN" Variant="Radzen.Variant.Outlined">
                            <RadzenDropDownDataGrid TValue="Users" Data="@users" TextProperty="UserName"  ValueProperty="UserID" AllowFilteringByAllStringColumns="true"  AllowVirtualization="true" AllowClear="true">
                                <Columns>
                                    <RadzenDropDownDataGridColumn Property="UserID" Title="UserID"  />
                                    <RadzenDropDownDataGridColumn Property="UserName" Title="UserName" />
                                </Columns>
                            </RadzenDropDownDataGrid>
                        </RadzenFormField>
                    </CardHeaderActions>
                </MudCardHeader>
            </MudCard>
        </MudItem>
        <MudItem xs="12" lg="3">
            <MudCard Elevation="25">
                <MudCardHeader>
                    <CardHeaderContent>
                        <MudText Class="mudcard-title">Vessel Details</MudText>
                    </CardHeaderContent>
                    <CardHeaderActions>
                        
                    </CardHeaderActions>
                </MudCardHeader>
                <MudCardContent>
                    <MudGrid Spacing="3">
                        <MudItem xs="12" lg="12">
                            <MudSelect T="double" Label="Vessel Category" Required Margin="@_margin" Variant="@mudblazorvariant" AnchorOrigin="Origin.BottomCenter">
                                <MudSelectItem T="double" Value="1">One</MudSelectItem>
                                <MudSelectItem T="double" Value="2">Two</MudSelectItem>
                                <MudSelectItem T="double" Value="3">Three</MudSelectItem>
                                <MudSelectItem T="double" Value="4">Four</MudSelectItem>
                                <MudSelectItem T="double" Value="5">Five</MudSelectItem>
                            </MudSelect>
                        </MudItem>
                        <MudItem xs="12" lg="12">
                            <MudField Label="Vessel Definition Checked"  Variant="@mudblazorvariant" InnerPadding="false" Required>
                                <MudStack Row="true">
                                    <MudCheckBox @bind-Value="Label_CheckBox1" Color="Color.Primary" UncheckedColor="Color.Default" Label="View" ></MudCheckBox>
                                </MudStack>
                            </MudField>
                        </MudItem>
                        <MudItem xs="12" lg="12">
                            <MudTextField T="string" Label="Vessel Owner Details" Required Margin="@_margin" Variant="@mudblazorvariant" Lines="12" />
                        </MudItem>
                    </MudGrid>
                </MudCardContent>
            </MudCard>
        </MudItem>
        <MudItem xs="12" lg="9">
            <MudCard Elevation="25">
                <MudCardHeader>
                    <CardHeaderContent>
                        <MudText Class="mudcard-title">Voyage Details</MudText>
                    </CardHeaderContent>
                    <CardHeaderActions>
                        
                    </CardHeaderActions>
                </MudCardHeader>
                <MudCardContent>
                    <MudGrid Spacing="3">
                        <MudItem xs="12" lg="3">
                            <MudTextField T="string" Label="Request Number" Margin="@_margin" Variant="@mudblazorvariant" />
                        </MudItem>
                        <MudItem xs="12" lg="3">
                           
                            <RadzenFormField Text="VCN" Variant="@radzenvariant" style="width: 100%;">
                                <RadzenDropDownDataGrid TValue="Users" Data="@users" TextProperty="UserName"  ValueProperty="UserID" AllowFilteringByAllStringColumns="true"  AllowVirtualization="true" AllowClear="true">
                                    <Columns>
                                        <RadzenDropDownDataGridColumn Property="UserID" Title="UserID"  />
                                        <RadzenDropDownDataGridColumn Property="UserName" Title="UserName" />
                                    </Columns>
                                </RadzenDropDownDataGrid>
                            </RadzenFormField>
                           
                        </MudItem>
                        <MudItem xs="12" lg="3">
                            <MudTextField T="string" Label="Terminal" Margin="@_margin" Variant="@mudblazorvariant" />
                        </MudItem>
                        <MudItem xs="12" lg="3">
                            <MudTextField T="string" Label="GRT" Margin="@_margin" Variant="@mudblazorvariant" />
                        </MudItem>

                        <MudItem xs="12" lg="3">
                            <MudTextField T="string" Label="LOA" Margin="@_margin" Variant="@mudblazorvariant" />
                        </MudItem>
                        <MudItem xs="12" lg="3">
                            <MudTextField T="string" Label="Loading Voyage" Margin="@_margin" Variant="@mudblazorvariant" />
                        </MudItem>
                        <MudItem xs="12" lg="3">
                            <MudTextField T="string" Label="Discharge Voyage" Margin="@_margin" Variant="@mudblazorvariant" />
                        </MudItem>
                        <MudItem xs="12" lg="3">
                            <MudSelect T="double" Label="Discharge/Load Both" Required Margin="@_margin" Variant="@mudblazorvariant" AnchorOrigin="Origin.BottomCenter">
                                <MudSelectItem T="double" Value="1">One</MudSelectItem>
                                <MudSelectItem T="double" Value="2">Two</MudSelectItem>
                                <MudSelectItem T="double" Value="3">Three</MudSelectItem>
                                <MudSelectItem T="double" Value="4">Four</MudSelectItem>
                                <MudSelectItem T="double" Value="5">Five</MudSelectItem>
                            </MudSelect>
                        </MudItem>
                        <MudItem xs="12" lg="3">
                            <MudTextField T="string" Label="P/I Club" Required Margin="@_margin" Variant="@mudblazorvariant" />
                        </MudItem>
                        <MudItem xs="12" lg="3">
                            <MudTextField T="string" Label="ANF Number" Margin="@_margin" Variant="@mudblazorvariant" />
                        </MudItem>
                        <MudItem xs="12" lg="3">
                            <MudTextField T="string" Label="Vessel Maximum Draft" Margin="@_margin" Variant="@mudblazorvariant" />
                        </MudItem>
                        <MudItem xs="12" lg="3">
                            <MudTextField T="string" Label="TPC" Margin="@_margin" Variant="@mudblazorvariant" />
                        </MudItem>
                        <MudItem xs="12" lg="3">
                            <MudDatePicker @bind-Date="_date" Label="ETA" Required PickerVariant="PickerVariant.Dialog" Margin="@_margin" Variant="@mudblazorvariant"  />
                        </MudItem>
                        <MudItem xs="12" lg="3">
                            <MudDatePicker @bind-Date="_date" Label="ETD" Required PickerVariant="PickerVariant.Dialog" Margin="@_margin" Variant="@mudblazorvariant"  />
                        </MudItem>
                        <MudItem xs="12" lg="3">
                            <MudTextField T="string" Label="Last Port" Required Margin="@_margin" Variant="@mudblazorvariant" />
                        </MudItem>
                        <MudItem xs="12" lg="3">
                            <MudTextField T="string" Label="Next Port" Required Margin="@_margin" Variant="@mudblazorvariant" />
                        </MudItem>
                        <MudItem xs="12" lg="3">
                            <MudTextField T="string" Label="Load Port" Margin="@_margin" Variant="@mudblazorvariant" />
                        </MudItem>
                        <MudItem xs="12" lg="3">
                            <MudTextField T="string" Label="Discharge Port" Margin="@_margin" Variant="@mudblazorvariant" />
                        </MudItem>
                        <MudItem xs="12" lg="3">
                            <MudTextField T="string" Label="FWD Arrival Draft" Margin="@_margin" Variant="@mudblazorvariant" />
                        </MudItem>
                        <MudItem xs="12" lg="3">
                            <MudTextField T="string" Label="FWD Departure Draft" Margin="@_margin" Variant="@mudblazorvariant" />
                        </MudItem>
                        <MudItem xs="12" lg="3">
                            <MudSelect T="double" Label="SBU" Required Margin="@_margin" Variant="@mudblazorvariant" AnchorOrigin="Origin.BottomCenter">
                                <MudSelectItem T="double" Value="1">One</MudSelectItem>
                                <MudSelectItem T="double" Value="2">Two</MudSelectItem>
                                <MudSelectItem T="double" Value="3">Three</MudSelectItem>
                                <MudSelectItem T="double" Value="4">Four</MudSelectItem>
                                <MudSelectItem T="double" Value="5">Five</MudSelectItem>
                            </MudSelect>
                        </MudItem>
                        <MudItem xs="12" lg="3">
                            <MudTextField T="string" Label="Owner Local Representatives" Margin="@_margin" Variant="@mudblazorvariant" />
                        </MudItem>
                        <MudItem xs="12" lg="3">
                            <MudTextField T="string" Label="AFT Arrival Draft" Margin="@_margin" Variant="@mudblazorvariant" />
                        </MudItem>
                        <MudItem xs="12" lg="3">
                            <MudTextField T="string" Label="AFT Departure Draft" Margin="@_margin" Variant="@mudblazorvariant" />
                        </MudItem>
                        
                    </MudGrid>
                </MudCardContent>
            </MudCard>
        </MudItem>
        <MudItem xs="12" lg="12">
            <MudCard Elevation="25">
                <MudCardHeader>
                    <CardHeaderContent>
                        <MudText Class="mudcard-title">Cargo Details</MudText>
                    </CardHeaderContent>
                    <CardHeaderActions>
                        
                    </CardHeaderActions>
                </MudCardHeader>
                <MudCardContent class="pa-0">
                    <RadzenDataGrid class="form-data-grid" TItem="FormGrid" Data="@formgrid" 
                        PageSize="8" IsLoading="false" AllowColumnResize="true"
                        Responsive="true" Density="Density.Default" GridLines="DataGridGridLines.Both">
                            <FooterTemplate>
                                <MudElement HtmlTag="div" Class="pa-3 d-flex justify-end">
                                    <MudTooltip Text="Add Item">
                                        <MudButton StartIcon="@Icons.Material.Outlined.Add" Color="Color.Primary" Class="rounded-pill  px-4" Variant="MudBlazor.Variant.Filled" Size="Size.Small">Add Item</MudButton>
                                    </MudTooltip>
                                </MudElement>
                            </FooterTemplate>
                            <Columns>
                                <RadzenDataGridColumn TItem="FormGrid" Property="BaseStatus" Title="Base Status">
                                    <Template Context="data">
                                        <MudSelect T="double" Margin="@_margin" Variant="@mudblazorvariant" AnchorOrigin="Origin.BottomCenter">
                                            <MudSelectItem T="double" Value="1">One</MudSelectItem>
                                            <MudSelectItem T="double" Value="2">Two</MudSelectItem>
                                            <MudSelectItem T="double" Value="3">Three</MudSelectItem>
                                            <MudSelectItem T="double" Value="4">Four</MudSelectItem>
                                            <MudSelectItem T="double" Value="5">Five</MudSelectItem>
                                        </MudSelect>
                                    </Template>
                                </RadzenDataGridColumn>
                                <RadzenDataGridColumn TItem="FormGrid" Property="CargoType" Title="Cargo Type">
                                    <Template Context="data">
                                        <MudSelect T="double" Margin="@_margin" Variant="@mudblazorvariant" AnchorOrigin="Origin.BottomCenter">
                                            <MudSelectItem T="double" Value="1">One</MudSelectItem>
                                            <MudSelectItem T="double" Value="2">Two</MudSelectItem>
                                            <MudSelectItem T="double" Value="3">Three</MudSelectItem>
                                            <MudSelectItem T="double" Value="4">Four</MudSelectItem>
                                            <MudSelectItem T="double" Value="5">Five</MudSelectItem>
                                        </MudSelect>
                                    </Template>
                                </RadzenDataGridColumn>
                                <RadzenDataGridColumn TItem="FormGrid" Property="Commodity" Title="Commodity">
                                    <Template Context="data">
                                        <MudSelect T="double" Margin="@_margin" Variant="@mudblazorvariant" AnchorOrigin="Origin.BottomCenter">
                                            <MudSelectItem T="double" Value="1">One</MudSelectItem>
                                            <MudSelectItem T="double" Value="2">Two</MudSelectItem>
                                            <MudSelectItem T="double" Value="3">Three</MudSelectItem>
                                            <MudSelectItem T="double" Value="4">Four</MudSelectItem>
                                            <MudSelectItem T="double" Value="5">Five</MudSelectItem>
                                        </MudSelect>
                                    </Template>
                                </RadzenDataGridColumn>
                                <RadzenDataGridColumn TItem="FormGrid" Property="PackageType" Title="Package Type">
                                    <Template Context="data">
                                        <MudSelect T="double" Margin="@_margin" Variant="@mudblazorvariant" AnchorOrigin="Origin.BottomCenter">
                                            <MudSelectItem T="double" Value="1">One</MudSelectItem>
                                            <MudSelectItem T="double" Value="2">Two</MudSelectItem>
                                            <MudSelectItem T="double" Value="3">Three</MudSelectItem>
                                            <MudSelectItem T="double" Value="4">Four</MudSelectItem>
                                            <MudSelectItem T="double" Value="5">Five</MudSelectItem>
                                        </MudSelect>
                                    </Template>
                                </RadzenDataGridColumn>
                                <RadzenDataGridColumn TItem="FormGrid" Property="Unit" Title="Unit" Width="84px">
                                    <Template Context="data">
                                        <MudTextField T="string" Label="" Margin="@_margin" Placeholder="-" Variant="@mudblazorvariant" />
                                    </Template>
                                </RadzenDataGridColumn>
                                <RadzenDataGridColumn TItem="FormGrid" Property="TotalWt" Title="Total Wt" Width="100px">
                                    <Template Context="data">
                                        <MudTextField T="string" Label="" Margin="@_margin" Placeholder="-" Variant="@mudblazorvariant" />
                                    </Template>
                                </RadzenDataGridColumn>
                                <RadzenDataGridColumn TItem="FormGrid" Property="CoastalCargo" Title="Coastal Cargo" Width="84px" TextAlign="TextAlign.Center">
                                    <Template Context="data">
                                        <MudCheckBox @bind-Value="Label_CheckBox1" Color="Color.Primary" UncheckedColor="Color.Default"></MudCheckBox>
                                    </Template>
                                </RadzenDataGridColumn>
                                <RadzenDataGridColumn TItem="FormGrid" Property="UOM" Title="UOM" Width="84px">
                                    <Template Context="data">
                                        <MudTextField T="string" Label="" Margin="@_margin" Placeholder="-" Variant="@mudblazorvariant" />
                                    </Template>
                                </RadzenDataGridColumn>
                                <RadzenDataGridColumn TItem="FormGrid" Property="Remark" Title="Remark">
                                    <Template Context="data">
                                        <MudTextField T="string" Label="" Margin="@_margin" Placeholder="placeholder" Variant="@mudblazorvariant" />
                                    </Template>
                                </RadzenDataGridColumn>
                                <RadzenDataGridColumn TItem="FormGrid" Property="Action" Title="Action" Width="74px" TextAlign="TextAlign.Center">
                                    <Template Context="data">
                                        <MudElement HtmlTag="div" Class="action-td d-flex justify-center">
                                            <MudTooltip Text="Remove">
                                                <MudIconButton Icon="@Icons.Material.Outlined.Clear" Color="Color.Error" Size="Size.Small"></MudIconButton>
                                            </MudTooltip>
                                            
                                        </MudElement>
                                    </Template>
                                </RadzenDataGridColumn>
                            </Columns>
                    </RadzenDataGrid>
                </MudCardContent>
            </MudCard>
        </MudItem>
    </MudGrid>
</MudElement>

<MudAppBar WrapContent="true" Bottom="true" Class="toolbar-foot" Fixed="false" Color="Color.Default" Elevation="25">
    <MudElement HtmlTag="div" class="foot-left">
        <MudCheckBox @bind-Value="Label_CheckBox1" Color="Color.Primary" UncheckedColor="Color.Default" Label="I agree for Terms & Conditions as defined by port."></MudCheckBox>
    </MudElement>
    <MudElement HtmlTag="div" class="foot-right">
        <MudButton Variant="MudBlazor.Variant.Outlined" Color="Color.Secondary">Cancel</MudButton>
        <MudButton ButtonType="MudBlazor.ButtonType.Submit" 
        StartIcon="@Icons.Material.Outlined.Save" Variant="MudBlazor.Variant.Filled" Color="Color.Success">Save</MudButton>
    </MudElement>
</MudAppBar>
